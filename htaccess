RewriteEngine On

# Redirecionar para o login se não houver página especificada
RewriteCond %{REQUEST_URI} !^/index.php$
RewriteRule ^$ /index.php?page=login [L]

# Bloquear acesso direto ao .env
<Files .env>
    Order allow,deny
    Deny from all
</Files>

# Reescrever URLs amigáveis
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?page=$1 [L]
